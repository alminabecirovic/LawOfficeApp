<Window x:Class="LawOfficeApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LawOfficeApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Law Office Dashboard" Height="600" Width="900">

    <!-- DataContext is set in code-behind to pass service instance -->
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="Load" Command="{Binding LoadCommand}" Width="90"/>
            <Button Content="Add Advokat" Command="{Binding AddAdvokatCommand}" Width="110" Margin="6,0,0,0"/>
            <Button Content="Upcoming (7d)" Command="{Binding ShowUpcomingCommand}" Width="120" Margin="6,0,0,0"/>
            <Button Content="Open Billing" Width="110" Margin="6,0,0,0" Click="OpenBilling_Click"/>
        </StackPanel>

        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Advokati" Grid.Column="0" Margin="6">
                <ListView ItemsSource="{Binding Advokati}" SelectedItem="{Binding SelectedAdvokat}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Ime" DisplayMemberBinding="{Binding FirstName}" Width="90"/>
                            <GridViewColumn Header="Prezime" DisplayMemberBinding="{Binding LastName}" Width="120"/>
                            <GridViewColumn Header="Spec." DisplayMemberBinding="{Binding Specialization}" Width="120"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <GroupBox Header="Slučajevi" Grid.Column="1" Margin="6">
                <ListView ItemsSource="{Binding Slucajevi}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="150"/>
                            <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="80"/>
                            <GridViewColumn Header="Deadline" DisplayMemberBinding="{Binding Deadline}" Width="120"/>
                            <GridViewColumn Header="Klijent" DisplayMemberBinding="{Binding Client.FullName}" Width="160"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
